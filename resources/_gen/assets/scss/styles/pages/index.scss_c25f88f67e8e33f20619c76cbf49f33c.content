html{background-color:#FAFAFA;box-sizing:border-box}*,*:before,*:after{box-sizing:inherit}body{color:#323030;font-family:'Source Sans Pro', sans-serif;padding:0;margin:0;display:flex;flex-direction:column;overflow-x:hidden}p{margin:7px 0}a{text-decoration:underline;color:#0A6AEB}input,input:active,input:focus{outline:0}button,button:active,button:focus{outline:0;border:0}.skip-link{position:absolute;top:-40px;left:0;background:#000000;color:white;padding:8px;z-index:100}.skip-link:focus{top:0}header{top:0;height:100px;width:100vw;background-color:#FAFAFA;z-index:1;display:flex;flex-direction:row;justify-content:center}header div.container{height:100%;width:100%;padding:0 10%;display:flex;flex-direction:row;align-items:center;justify-content:space-between;max-width:1250px}header div.container a{text-decoration:none;color:inherit}header div.container div#logo{font-size:1.6em}header div.container div#logo a{font-family:'PT Serif', serif;font-weight:700}header div.container nav ul{display:flex;flex-direction:row;list-style-type:none;font-size:1.1em;margin:0}header div.container nav ul li{margin:0 30px;color:rgba(50,48,48,0.83);transition:color .15s ease-in-out}header div.container nav ul li:hover{transition:color .3s ease-in-out;color:#323030}header div.container nav ul li:last-child{margin:0 0 0 30px}header.fixed{position:fixed}header.relative{position:relative}@media screen and (min-width: 2500px){header div.container{padding:0}}@media screen and (max-width: 850px){header{height:70px}header div.container{justify-content:center}header div.container nav{display:none}}@media screen and (max-width: 420px){header{height:50px}}section{position:relative;top:100px;min-height:calc(100vh - 100px);width:100vw}@media screen and (max-width: 850px){section{top:70px;min-height:calc(100vh - 70px)}}@media screen and (max-width: 420px){section{top:50px;min-height:calc(100vh - 50px)}}section#introduction,section#contact{display:flex;flex-direction:column;align-items:center}section#introduction>div,section#contact>div{position:relative;top:15vh;padding:20px}section#introduction>div p,section#contact>div p{font-size:1.6em;color:#101010}section#introduction>div p:nth-child(1),section#contact>div p:nth-child(1){font-size:2.4em}section#work{display:flex;flex-direction:column;align-items:center}section#work>div{position:relative;padding:2.5em;width:100%;max-width:1000px;display:flex;flex-direction:column}section#work>div div.work-item{display:flex;flex-direction:row;justify-content:flex-end}section#work>div div.work-item div.side{display:flex;flex-direction:column}section#work>div div.work-item div.side p,section#work>div div.work-item div.side a{font-size:1.4em}section#work>div div.work-item div.side.left{align-items:flex-end;padding:0 20px 0 0;min-width:200px}section#work>div div.work-item div.side.left p.date{color:rgba(50,48,48,0.83);text-transform:uppercase;white-space:nowrap;font-weight:600}section#work>div div.work-item div.side.left div.date-connector{position:relative;right:25px;width:2px;height:100%;background-color:rgba(50,48,48,0.1)}section#work>div div.work-item div.side.right{flex-grow:1;margin:0 0 75px 0}section#work>div div.work-item div.side.right div.header{display:flex;flex-direction:row;justify-content:space-between}section#work>div div.work-item div.side.right div.header p,section#work>div div.work-item div.side.right div.header a{margin:0}section#work>div div.work-item div.side.right div.header p.title{font-size:2em;color:#323030}section#work>div div.work-item div.side.right div.header a.project-link{text-decoration:none}section#work>div div.work-item div.side.right p.description{color:#101010}section#work>div div.work-item div.side.right div.showcase{margin:25px auto 0 auto;width:80%}section#work>div div.work-item div.side.right div.showcase img{width:100%;height:auto;box-shadow:0 0 25px rgba(0,0,0,0.15);border-radius:5px}section#work>div div.work-item:last-child div.side.left div.date-connector{display:none}@media screen and (max-width: 850px){section#work>div div.work-item{flex-direction:column}section#work>div div.work-item div.date-connector{display:none}section#work>div div.work-item div.side.left{align-items:flex-start}}@media screen and (max-width: 550px){section#work>div div.work-item div.side.right{flex-direction:column}section#work>div div.work-item div.side.right div.showcase{width:100%}section#work>div div.work-item div.side.right div.header{flex-direction:column}section#introduction>div,section#contact>div{top:5vh}}@media screen and (max-width: 420px){body{font-size:0.9rem}section#work>div{padding:20px}}@media screen and (max-width: 380px){body{font-size:0.85rem}}
